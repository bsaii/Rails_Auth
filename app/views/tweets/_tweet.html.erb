<div class="mb-3 card card-body">
    <%= tweet.body %>

    <div class='me-4'>
        <%= image_tag tweet.twitter_account.image, class: 'rounded-circle' %>
        <%= tweet.twitter_account.name %>
        <%= link_to "@#{tweet.twitter_account.username}", "https://twitter.com/#{tweet.twitter_account.username}", target: :_blank %>

        <% if tweet.published? %>
            <%= link_to 'View Tweet', "https://twitter.com/#{tweet.twitter_account.username}/status/#{tweet.tweet_id}" %>
        <% else %>
            Scheduled For: <%= l tweet.published_at, format: :long %> <%# the l is a helper for the time and date and the format is the format you want it in ie short/long %>

            <%= link_to 'Edit Tweet', edit_tweet_path(tweet) %>
        <% end %>
    </div>
</div>