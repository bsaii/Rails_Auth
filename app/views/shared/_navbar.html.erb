        <% if Current.user %>
          <div class='nav-item'>
            <%= link_to Current.user.email, edit_password_path, class: "nav-link" %>
          </div>
          <div>
            <%= button_to "logout", logout_path, method: :delete, class: "btn btn-sm btn-outline-secondary" %>
