        <% else %>
          <div class='nav-item'>
            <%= link_to 'Sign Up', sign_up_path, class: "nav-link" %>
          </div>
          <div class='nav-item'>
            <%= link_to 'Log In', sign_in_path, class: "nav-link" %>
