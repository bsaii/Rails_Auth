<%
=begin%>
  The flash sends a message to the use and disappers after the next request, that is why we have the if statement
<%
=end%>
<% if flash[:notice] %>
    <div class='alert alert-info mt-4' role='alert'>
        <%= flash[:notice] %>
    </div>
<% end %>

<% if flash[:alert] %>
    <div class='alert alert-warning mt-4' role='alert'>
    <%= flash[:alert] %>
    </div>
<%end %>